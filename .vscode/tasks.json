{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "build debug darwin",
            "command": "/usr/local/bin/g++-12",
            "args": [
                "-std=c++20",
                "-g",
                "-Wall",
                "${workspaceFolder}/source/*.cpp",   
                "-D_THREAD_SAFE",
                "-I", 
                "${workspaceFolder}/include",
                "-I",
                "/usr/local/include",
                "-L/usr/local/lib",
                "-pthread",
                "-lSDL2main",
                "-lSDL2", 
                "-lSDL2_image", 
                "-lSDL2_mixer", 
                "-lSDL2_ttf",
                "-o",
                "${workspaceFolder}/bin/debug/${workspaceFolderBasename}"

            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "build debug windows",
            "command": "E:\\msys64\\mingw64\\bin\\g++.exe",
            "args": [
                "-std=c++20",
                "-g",
                "-Wall",
                "${workspaceFolder}/source/*.cpp",
                "-I",
                "${workspaceFolder}/include",
                "-pthread",
                "-lmingw32",
                "-lSDL2main",
                "-lSDL2",
                "-lSDL2_image",
                "-lSDL2_mixer",
                "-lSDL2_ttf",
                //"-mwindows",
                "-o",
                "${workspaceFolder}/bin/debug/${workspaceFolderBasename}.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "shell",
            "label": "make-windows",
            "command": "make",
            "group": "build",
            "args": [],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "detail": "Task generated by Debugger."
        },
    ],
    "version": "2.0.0"
}